generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum UserRole {
  USER
  ADMIN
}

enum AgeGroup {
  ANAK
  REMAJA
  DEWASA
  LANSIA
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id           String        @id @default(uuid()) @db.VarChar(191)
  name         String        @db.VarChar(255)
  email        String        @unique @db.VarChar(255)
  passwordHash String        @map("password_hash") @db.VarChar(255)
  role         UserRole      @default(USER)
  isActive     Boolean       @default(true) @map("is_active")
  createdAt    DateTime      @default(now()) @map("created_at")
  aiUsageLogs  AIUsageLog[]
  profile      UserProfile?

  @@map("users")
}

model AIUsageLog {
  id               String   @id @default(uuid())
  userId           String   @map("user_id") @db.VarChar(191)
  model            String   @db.VarChar(100)
  promptTokens     Int      @map("prompt_tokens")
  completionTokens Int      @map("completion_tokens")
  totalTokens      Int      @map("total_tokens")
  cost             Float
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
  @@map("ai_usage_logs")
}

model UserProfile {
  userId         String    @id @map("user_id") @db.VarChar(191)
  phoneNumber    String?   @map("phone_number") @db.VarChar(20)
  ageGroup       AgeGroup  @map("age_group")
  gender         Gender
  customNotes    String?   @map("custom_notes") @db.Text
  notifEnabled   Boolean?  @map("notif_enabled") @default(false)
  district       String?   @db.VarChar(100)
  updatedAt      DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}
